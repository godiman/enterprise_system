<!DOCTYPE html>
<html lang="en">

<head>
  <title>Admin | Enterprise System</title>

  <!-- Online CSS Links -->
  <%- include('../snippets/header.ejs') %>
    <!-- Template Main CSS File -->
    <link href="/css/style.css" rel="stylesheet">
</head>

<body>
  <!-- ======= Header ======= -->
  <%- include('../snippets/nav.ejs') %>
    <!-- End Header -->

    <!-- ======= Sidebar ======= -->
    <%- include('../snippets/sidebar.ejs') %>
      <!-- End Sidebar-->

      <main id="main" class="main">

        <div class="pagetitle">
          <h1>Register new admin</h1>
          <nav>
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/admin/home">Home</a></li>
              <li class="breadcrumb-item active">New admin</li>
            </ol>
          </nav>
        </div><!-- End Page Title -->


        <div class="container">

          <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center">
            <div class="container">
              <div class="row justify-content-center">
                <div class="col-lg-8 col-md-6 d-flex flex-column align-items-center justify-content-center">

                  <div class="card mb-3">
                    <div class="card-body">
                      <div class="pt-4 pb-2">
                        <h5 class="card-title text-center pb-0 fs-4">Create an Admin</h5>
                      </div>
                      <form id="regForm" class="row g-3">
                        <div class="col-6">
                          <label for="yourName" class="form-label">Your Name</label>
                          <input type="text" class="form-control" name="userName">
                          <div class="error uNameErr"></div>
                        </div>

                        <div class="col-6">
                          <label for="yourEmail" class="form-label">Your Email</label>
                          <input type="email" name="email" class="form-control" id="yourEmail">
                          <div class="error emailErr"></div>
                        </div>

                        <div class="col-6">
                          <label for="inputAddress" class="form-label">Address</label>
                          <input type="text" name="address" class="form-control">
                          <div class="addressErr error"></div>
                        </div>

                        <div class="col-6">
                          <label for="inputDate" class="form-label">Date of Birh</label>
                          <input type="date" class="form-control" name="dateOfBirth">
                          <div class="dobErr error"></div>
                        </div>

                        <div class="col-6">
                          <label for="inputGender" class="form-label">Gender</label>
                          <select name="gender" class="form-select">
                            <option>Male</option>
                            <option>Female</option>
                          </select>
                          <div class="genderErr error"></div>
                        </div>

                        <div class="col-md-6">
                          <label for="inputPosition" class="form-label">Position</label>
                          <select name="position" class="form-select">
                            <option selected value="">Select Position</option>
                            <% if (context.positions) { %>
                              <% context.positions.forEach(position=> { %>
                                <option value="<%= position.name %>">
                                  <%= position.name %>
                                </option>
                                <% }) %>
                                  <% } %>
                          </select>
                          <div class="positionErr error"></div>
                        </div>

                        <div class="col-md-6">
                          <label for="inputDepartment" class="form-label">Department</label>
                          <select name="department" class="form-select">
                            <option selected value="">Select Department</option>
                            <% if (context.departments) { %>
                              <% context.departments.forEach(department=> { %>
                                <option value="<%= department.departName %>">
                                  <%= department.departName %>
                                </option>
                                <% }) %>
                                  <% } %>
                          </select>
                          <div class="departErr error"></div>
                        </div>

                        <div class="col-md-6">
                          <label for="inputPhone_no" class="form-label">Type of Staff</label>
                          <input type="text" name="staffType" class="form-control">
                          <div class="staffErr error"></div>
                        </div>

                        <div class="col-md-6">
                          <label for="inputAge" class="form-label">Contract End</label>
                          <input type="date" name="contractEndDate" class="form-control">
                          <div class="contractErr error"></div>
                        </div>

                        <div class="col-md-6">
                          <label for="inputAge" class="form-label">Salary</label>
                          <input type="text" name="amount" class="form-control">
                          <div class="amtErr error"></div>
                        </div>

                        <div class="col-lg-12">
                          <div class="mb-3">
                            <label for="imageUpload">Select an image:</label>
                            <input type="file" name="image" id="imageUpload">
                            <div class="imgErr error"></div>
                          </div>
                        </div>

                        <div class="col-6">
                          <label for="yourPassword" class="form-label">Password</label>
                          <input type="password" name="password" class="form-control" id="yourPassword">
                          <div class="error pwdErr"></div>
                        </div>

                        <div class="col-6">
                          <label for="yourPassword" class="form-label">Confirm Password</label>
                          <input type="password" name="cpassword" class="form-control" id="yourPassword">
                          <div class="error cpwdErr"></div>
                        </div>


                        <div class="col-12">
                          <div class="form-check">
                            <input class="form-check-input" name="terms" type="checkbox" value="" id="acceptTerms"
                              required>
                            <label class="form-check-label" for="acceptTerms">I agree and accept the <a href="#">terms
                                and conditions</a></label>
                            <div class="invalid-feedback"></div>
                          </div>
                        </div>
                        <div class="col-12">
                          <button class="btn btn-primary w-100" type="submit">Register</button>
                        </div>
                      </form>

                    </div>
                  </div>



                </div>
              </div>
            </div>

          </section>




      </main><!-- End #main -->
      <!-- End #main -->
      <!-- Scrollable modal -->


      <!-- ======= Footer ======= -->
      <%- include('../snippets/adminFooter.ejs') %>
        <!-- End Footer -->

        <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
            class="bi bi-arrow-up-short"></i></a>

        <!-- Vendor JS Files -->
        <script src="/formHandler/createAdmin.js"></script>
        <%- include('../snippets/toast.ejs') %>
          <%- include('../snippets/scripts.ejs') %>
</body>

</html>