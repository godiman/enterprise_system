<!DOCTYPE html>
<html lang="en">
<head>
    <title>Admin | Enterprise System</title>
    
    <!-- Online CSS Links -->
    <%- include('../snippets/header.ejs') %>
    <!-- Template Main CSS File -->
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- ======= Header ======= -->
    <%- include('../snippets/nav.ejs') %>
    <!-- End Header -->

    <!-- ======= Sidebar ======= -->
    <%- include('../snippets/sidebar.ejs') %>
    <!-- End Sidebar-->

    <main id="main" class="main">
    
        <div class="pagetitle">
            <h1>Staff</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/admin/home">Home</a></li>
                    <li class="breadcrumb-item active">Staffs</li>
    
                    <div class="pt-2 ms-auto">
                        <button data-bs-toggle="modal" data-bs-target="#exampleModal" title="Register new department" class="btn btn-success btn-lg text-white"><i class="bi bi-plus-lg"></i></button>
                    </div>
                </ol>            </nav>
        </div><!-- End Page Title -->
    
        <section class="section">
            <div class="row">
                <div class="col-lg-12">
    
                    <div class="table-responsive">
                        <table border="1" id="dataTable" class="table table-striped table-sm table datatable">
    
                            <!-- Table with stripped rows -->
    
                            <thead>
                                <tr>
                                    <th></th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Address</th>
                                    <th scope="col">DOB</th>
                                    <th scope="col">Gender</th>   
                                    <th scope="col">Position</th>
                                    <th scope="col">Department</th>
                                    <th scope="col">Staff Typ</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (context.staffs) { %>
                                    <% context.staffs.forEach(staff => { %>
                                <tr>
                                    <th scope="row">1</th>
                                    <td><%= staff.fName %></td>
                                    <td><%= staff.email %></td>
                                    <td><%= staff.address %></td>
                                    <td><%= staff.dateOfBirth %></td>
                                    <td><%= staff.gender %></td>
                                    <td><%= staff.position %></td>
                                    <td><%= staff.department %></td>
                                    <td><%= staff.staffType %></td>

                                    <td>
                                        
                                        <div class="dropdown">
                                            <button type="button" class="btn btn-success p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                              <i class="bx bx-dots-vertical-rounded"></i>
                                            </button>
                                            <div class="dropdown-menu">
                                              <a class="dropdown-item" href="/admin/staff-details/?staff_id=<%= staff._id %>"
                                                ><i class="bx bx-edit-alt me-1"></i>Details</a
                                              >
                                              <a class="dropdown-item" href=""
                                              onclick=" return  deleteStaff('<%= staff._id %>')"><i class="bx bx-trash me-1"></i> Delete</a
                                              >
                                            </div>
                                          </div> 
                                    </td>
                                </tr>
                                <% }) %>                      
                                <% } %>
                            </tbody>
    
                            <!-- End Table with stripped rows -->
                        </table>
                    </div>
    
                </div>
            </div>
        </section>
    
    </main>
    <!-- End #main -->
    <!-- Scrollable modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Register new staff</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form  id="staff_Form" class="row g-3">
                    <div class="col-md-6">
                    <label for="inputName" class="form-label">Name</label>
                    <input type="text" name="fName" class="form-control">
                    <div class="nameErr error"></div>
                    </div>

                    <div class="col-md-6">
                        <label for="inputEmail4" class="form-label">Email</label>
                        <input type="email" name="email" class="form-control">
                        <div class="emailErr error"></div>
                    </div>

                    <div class="col-md-6">
                        <label for="inputAddress" class="form-label">Address</label>
                        <input type="text"  name="address" class="form-control">
                        <div class="addressErr error"></div>
                    </div>

                    <div class="col-md-6">
                        <label for="inputDate" class="form-label">Date of Birh</label>
                        <input type="date" class="form-control" name="dateOfBirth"> 
                        <div class="dobErr error"></div>                          
                    </div>

                    <div class="col-md-6">
                        <label for="inputGender" class="form-label">Gender</label>
                        <select name="gender" class="form-select">
                        <option>Male</option>
                        <option>Female</option>                               
                        </select>
                        <div class="genderErr error"></div>
                    </div>
                    
                    <div class="col-md-6">
                        <label for="inputPosition" class="form-label">Position</label> 
                        <select name="position" class="form-select">
                            <option selected value="">Select Position</option>
                            <% if (context.positions) { %>
                                <% context.positions.forEach(position=> { %>
                                <option value="<%= position.name %>"><%= position.name %></option>
                                <% }) %>
                                <% } %>                                                                 
                        </select>   
                        <div class="positionErr error"></div>                              
                    </div>

                    <div class="col-md-6">
                        <label for="inputDepartment" class="form-label">Department</label>
                        <select name="department" class="form-select">
                            <option selected value="">Select Department</option>
                            <% if (context.departments) { %>
                            <% context.departments.forEach(department=> { %>
                            <option value="<%= department.departName %>"><%= department.departName %></option>
                            <% }) %>
                            <% } %>                                  
                        </select>
                        <div class="departErr error"></div> 
                        </div>
                    
                    <div class="col-md-6">
                        <label for="inputPhone_no" class="form-label">Type of Staff</label>
                        <input type="text"  name="staffType" class="form-control">
                        <div class="staffErr error"></div>
                    </div>
                
                    <div class="col-md-6">
                        <label for="inputAge" class="form-label">Contract End</label>
                        <input type="date"  name="contractEndDate" class="form-control"> 
                        <div class="contractErr error"></div>                               
                    </div>

                    <div class="col-md-6">
                        <label for="inputAge" class="form-label">Salary</label>
                        <input type="text"  name="amount" class="form-control"> 
                        <div class="amtErr error"></div>                               
                    </div>

                    <div class="col-lg-12">
                        <div class="mb-3">
                            <label for="imageUpload">Select an image:</label>
                          <input type="file" name="image" id="imageUpload" multiple>
                        </div>
                        <div class="imgErr error"></div>
                      </div>
                    
                    <div class="col-6">
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>

                    
                </form>
            </div>
            
            </div>
        </div>
    </div>

    <!-- ======= Footer ======= -->
    <%- include('../snippets/adminFooter.ejs') %>
    <!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
    class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="/formHandler/staff.js"></script>
    <script src="/formHandler/deleteStaff.js"></script>
    <%- include('../snippets/toast') %>
    <%- include('../snippets/scripts.ejs') %>

</body>
</html>
