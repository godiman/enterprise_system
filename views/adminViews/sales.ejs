<!DOCTYPE html>
<html lang="en">
<head>
   
    <title>Admin | Enterprise System</title>

    <!-- Online CSS Links -->
    <%- include('../snippets/header.ejs') %>
    <!-- Template Main CSS File -->
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>

    <!-- ======= Header ======= -->
    <%- include('../snippets/nav.ejs') %>
    <!-- End Header -->

    <!-- ======= Sidebar ======= -->
    <%- include('../snippets/sidebar.ejs') %>
    <!-- End Sidebar-->

    <!-- End #main -->
    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Admin</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/admin/home">Home</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>

                    <div class="pt-2 ms-auto">
                      <button data-bs-toggle="modal" data-bs-target="#exampleModal" title="Add new sales" class="btn btn-success btn-lg text-white"><i class="bi bi-plus-lg"></i></button>
                  </div>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class="section">
            <div class="row">
              <div class="col-lg-12">
  
  
                <div class="table-responsive">
                    <table class="table table-striped table-sm table datatable">
                    
                        <!-- Table with stripped rows -->
                    
                        <thead>
                          <tr>
                            <th scope="col">Brand</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Price per pack</th>
                            <th scope="col">Total</th>
                            <th scope="col">Action</th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <td>Chrisdon</td>
                            <td>2 packages</td>
                            <td>$34,000</td>
                            <td>50</td>
                            <td><button type="button" onclick="deleteRow(this)">Delete</button></td>
                          </tr>
                         
                        </tbody>
                      
                      <!-- End Table with stripped rows -->
  
  
                    </table>    
                </div>
      
              </div>
            </div>
          </section>
    </main>
    <!-- End #main -->

    <!-- Scrollable modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
          <div class="modal-content">
          <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">Register Sales</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
              <form action="" id="salesForm" class="row g-3">
                  <div class="col-md-6">
                    <label for="inputName" class="form-label">Brand</label>
                    <select name="brand" class="form-select">
                      <option selected value="">Select Brand</option>       
                      <% if (context.stocks) { %>
                          <% context.stocks.forEach(stock=> { %>
                          <option value="<%= stock.brand %>"><%= stock.brand %></option>
                          <% }) %>
                          <% } %>                                                                 
                  </select>   
                    
                  </div>
                  <div class="col-md-6">
                    <label for="inputPackage" class="form-label">Category</label>
                    <input type="text" name="category"  class="form-control">
                  </div>

                  <div class="col-md-6">
                    <label for="inputPackage" class="form-label">Package type</label>
                    <input type="text" name="pakagingType"  class="form-control"> 
                  </div>

                  <div class="col-md-6">
                   <label for="inputWholesale" class="form-label">Wholesale price</label>
                   <input type="text" name="wholePrice"  class="form-control">
                  </div>
                  
                  <div class="col-md-6">
                    <label for="inputUnityprice" class="form-label">unity price</label>
                    <select name="unitPrice" class="form-select">
                      <option selected value="">Select unity price</option>
                                                                                       
                    </select>
                    
                </div>
                <div class="col-md-6">
                  <label for="inputWholesaleQty" class="form-label">Wholesale Qty</label>
                  <select name="wholeQty" class="form-select">
                    <option selected value="">Select Wholesale Qty</option>
                                                                                    
                  </select>
                 
                </div>

                <div class="col-md-12">
                  <label for="inputUnityQty" class="form-label">unity Qty</label>
                  <select name="unitQty" class="form-select">
                    <option selected value="">Select Wholesale Qty</option>
                                                                                   
                  </select>
                  
                 </div>

                  <div class="col-6">
                      <button type="submit" class="btn btn-primary">Register</button>
                  </div>

                  <div class="nameErr error"></div>

              </form>
          </div>
          
          </div>
      </div>
   </div>

    <!-- ======= Footer ======= -->
    <%- include('../snippets/adminFooter.ejs') %>
    <!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
    class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="/formHandler/sales.js"></script>
    <%- include('../snippets/toast.ejs') %>
    <%- include('../snippets/scripts.ejs') %>
    
</body>
</html>